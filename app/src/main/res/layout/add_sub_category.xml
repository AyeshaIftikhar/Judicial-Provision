<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f2f6">

    <ImageView
        android:layout_width="175dp"
        android:layout_height="125dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/add_law_category_and_subcate"
        android:layout_margin="50dp"
        android:id="@+id/img_two"/>

    <TextView
        android:id="@+id/sub_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@id/img_two"
        android:text="Add Sub Category :"
        android:textSize="23dp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtSubCat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sub_cat"
        android:layout_marginTop="30dp"
        android:capitalize="words"
        android:hint="sub category"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/btnOK1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Submit "
        android:textColor="#ffffff"
        android:layout_below="@+id/edtSubCat"
        android:layout_marginTop="95dp"
        android:layout_marginLeft="275dp"
        android:background="@drawable/rounded_button"/>
</RelativeLayout>