<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f2f6">

    <TextView
        android:id="@+id/lawyerfrg"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:text="Judge"
        android:textColor="#8e44ad"
        android:textSize="23dp" />

    <ImageView
        android:id="@+id/demopic"
        android:layout_width="75dp"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        android:layout_marginTop="10dp"
        android:layout_below="@id/lawyerfrg"
        android:src="@drawable/lawyerpic_demo"
        />

    <TextView
        android:id="@+id/txtlaywerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lawyerfrg"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/demopic"
        android:text="Emma Watson"
        android:textColor="#000000"
        android:textSize="23dp" />



    <TextView
        android:id="@+id/txtphoneNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+92 300 1234556"
        android:textColor="#000000"
        android:textSize="23dp"
        android:layout_below="@id/txtlaywerName"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/demopic"
        android:layout_marginLeft="24dp"
        android:textStyle="italic" />



    <TextView
        android:id="@+id/txtemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Emma777@gmail.com"
        android:textColor="#000000"
        android:textSize="23dp"
        android:textStyle="italic"
        android:layout_below="@id/txtphoneNum"
        android:layout_toRightOf="@+id/demopic"
        android:layout_marginLeft="24dp"/>

    <TextView
        android:id="@+id/txtaddress2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:textColor="#8e44ad"
        android:textSize="23dp"
        android:layout_below="@+id/txtemail"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/txtaddres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/txtaddress2"
        android:layout_marginLeft="48dp"
        android:text="Paris"
        android:textColor="#000000"
        android:textSize="23dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txtExperience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtaddres"
        android:layout_marginTop="5dp"
        android:text="Experience:"
        android:textColor="#8e44ad"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/txtexperience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="05dp"
        android:layout_below="@id/txtExperience"
        android:layout_marginLeft="48dp"
        android:text="20 years of Service"
        android:textColor="#000000"
        android:textSize="23dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/servedcity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtexperience"
        android:text="Served In:"
        android:textColor="#8e44ad"
        android:textSize="23dp"
        android:layout_marginTop="05dp"/>

    <TextView
        android:id="@+id/textcity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/servedcity"
        android:layout_marginTop="5dp"
        android:text="Hollywood"
        android:textColor="#000000"
        android:textSize="23dp"
        android:textStyle="italic"
        android:layout_marginLeft="48dp"/>

    <TextView
        android:id="@+id/txtmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textcity"
        android:layout_marginTop="15dp"
        android:layout_marginRight="75dp"
        android:layout_toLeftOf="@+id/emailButton"
        android:text="Send Email to Judge:"
        android:textColor="#8e44ad"
        android:textSize="23dp" />

    <Button
        android:id="@+id/emailButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textcity"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/rounded_button"
        android:text="Email"
        android:textAlignment="center"
        android:textColor="#f1f2f6"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtmail"
        android:layout_marginTop="20dp"
        android:layout_marginRight="63dp"
        android:layout_toLeftOf="@+id/smsButton"
        android:text="Send Text Message:"
        android:textColor="#8e44ad"
        android:textSize="23dp" />

    <Button
        android:id="@+id/smsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailButton"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="24dp"
        android:layout_toLeftOf="@+id/emailButton"
        android:background="@drawable/rounded_button"
        android:text="Message"
        android:textAlignment="center"
        android:textColor="#f1f2f6"
        android:textSize="20dp"
        android:padding="10dp"/>


</RelativeLayout>

