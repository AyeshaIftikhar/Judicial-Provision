<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f2f6">

    <ImageView
        android:layout_width="125dp"
        android:layout_height="130dp"
        android:scaleType="fitXY"
        android:id="@+id/addhearingDate"
        android:layout_marginTop="20dp"
        android:src="@drawable/hearing_date"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/casenum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_below="@+id/addhearingDate"
        android:layout_marginTop="50dp"
        android:hint="Case Number"
        android:textStyle="normal"
        android:textSize="17dp"/>

    <EditText
        android:id="@+id/NextDate"
        android:layout_width="match_parent"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_below="@+id/casenum"
        android:layout_marginTop="20dp"
        android:hint="Next Date  DD-MM-YY"
        android:textStyle="normal"
        android:textSize="17dp"/>

    <EditText
        android:id="@+id/hearingSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NextDate"
        android:layout_marginTop="10dp"
        android:capitalize="sentences"
        android:hint="Hearing Summary"
        android:inputType="textMultiLine"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hearingSummary"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text=" Submit "
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:background="@drawable/rounded_button"/>


</RelativeLayout>