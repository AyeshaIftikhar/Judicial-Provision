<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f2f6">
    <ImageView
        android:id="@+id/inserttv1"
        android:layout_width="130dp"
        android:layout_height="75dp"
       android:scaleType="fitXY"
        android:layout_marginTop="7dp"
        android:src="@drawable/insert_data"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/iCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inserttv1"
        android:layout_marginTop="7dp"
        android:capitalize="words"
        android:hint="Category"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/isubCate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iCategory"
        android:capitalize="words"
        android:hint="SubCategory"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="normal" />



    <EditText
        android:id="@+id/lawNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Law Number"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="normal"
        android:layout_below="@id/isubCate"/>

    <EditText
        android:id="@+id/lawnameet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lawNo"
        android:capitalize="words"
        android:hint="Law Name"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/subjectet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lawnameet"
        android:capitalize="sentences"
        android:hint="Subject"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/descriptionet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/subjectet"
        android:capitalize="sentences"
        android:hint="Description"
        android:inputType="textMultiLine"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/conditionet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/descriptionet"
        android:capitalize="words"
        android:hint="Condition"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/paneltyet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/conditionet"
        android:capitalize="words"
        android:hint="Panelty"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/dateet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/paneltyet"
        android:hint="Date    DD-MM-YY"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/inserdbbtn"
        android:layout_width="100dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_below="@id/dateet"
        android:layout_marginTop="3dp"
        android:text="Next"
        android:textColor="#ffffff"
        android:textSize="17dp"
        android:textStyle="normal"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button"/>


</RelativeLayout>