<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f2f6">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/addclient"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/add_client"/>

    <EditText
        android:id="@+id/clientName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addclient"
        android:layout_marginTop="20dp"
        android:capitalize="words"
        android:hint="Name"
        android:textSize="17dp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/clientphNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clientName"
        android:layout_marginTop="10dp"
        android:hint="Phone Number"
        android:inputType="phone"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/clientEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clientphNo"
        android:layout_marginTop="10dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/clientaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clientEmail"
        android:layout_marginTop="10dp"
        android:hint="Address"
        android:textColor="#000000"
        android:textStyle="normal"
        android:textSize="17dp"/>

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clientaddress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_button"
        android:text=" Next "
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold" />

</RelativeLayout>