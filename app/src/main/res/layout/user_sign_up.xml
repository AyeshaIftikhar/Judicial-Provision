<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f2f6">

    <ImageView
        android:id="@+id/userSignUp"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/user_profile_and_sigup"
        android:scaleType="fitXY"
        />

    <EditText
        android:id="@+id/EdtxtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userSignUp"
        android:layout_marginTop="30dp"
        android:capitalize="words"
        android:hint="Name"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/edTxtphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/EdtxtName"
        android:layout_marginTop="10dp"
        android:hint="Phone Number"
        android:inputType="phone"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/edTxtemail1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edTxtphone"
        android:layout_marginTop="10dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/edTxtaddr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edTxtemail1"
        android:layout_marginTop="10dp"
        android:hint="Address"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/edTxtPw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edTxtaddr"
        android:layout_marginTop="10dp"
        android:hint="password"
        android:inputType="textPassword"
        android:maxLength="10"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/signup2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edTxtPw"
        android:layout_marginTop="30dp"
        android:text=" SignUp "
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button"
        android:textStyle="normal"
        android:textSize="17dp"
        android:textAlignment="center"/>
</RelativeLayout>