<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f2f6">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="135dp"
        android:id="@+id/addRef"
        android:scaleType="fitXY"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/add_references_and_update_ref"/>

    <EditText
        android:id="@+id/bookin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addRef"
        android:layout_marginTop="30dp"
        android:hint="Book"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/chapterin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookin"
        android:layout_marginTop="20dp"
        android:hint="Chapter"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/pagein"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chapterin"
        android:layout_marginTop="20dp"
        android:hint="Pageno"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/authornamein"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pagein"
        android:layout_marginTop="20dp"
        android:capitalize="words"
        android:hint="Author Name"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="normal" />



    <Button
        android:id="@+id/okbtn1in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/authornamein"
        android:layout_marginLeft="275dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_button"
        android:text=" Submit "
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="normal" />



</RelativeLayout>