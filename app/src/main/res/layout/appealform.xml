<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f2f6">
    <ImageView
        android:id="@+id/appealForm"
        android:layout_width="125dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/appeal_form" />

    <EditText
        android:id="@+id/appealTO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appealForm"
        android:layout_marginTop="15dp"
        android:capitalize="words"
        android:hint="Appeal To:"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/appealFrom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appealTO"
        android:layout_marginTop="7dp"
        android:capitalize="words"
        android:hint="Appeal From:"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/caseNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CaseNo"
        android:textSize="17dp"
        android:textColor="#000000"
        android:textStyle="normal"
        android:layout_below="@id/appealFrom"
        android:layout_marginTop="7dp"/>


    <EditText
        android:id="@+id/subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/caseNo"
        android:layout_marginTop="7dp"
        android:capitalize="sentences"
        android:hint="Subject"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="normal"
        android:inputType="textMultiLine"
        android:maxLines="2"/>

    <EditText
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/subject"
        android:layout_marginTop="7dp"
        android:capitalize="sentences"
        android:hint="description"
        android:inputType="textMultiLine"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/submit"
        android:layout_width="100dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_button"
        android:text=" Submit "
        android:textColor="#ffffff"
        android:textSize="17dp"
        android:textStyle="normal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate PDF report?"
        android:textSize="20dp"
        android:textColor="#8e44ad"
        android:id="@+id/txtpdf"
        android:layout_below="@+id/submit"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"/>

    <Button
        android:id="@+id/report"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/submit"
        android:layout_marginLeft="90dp"
        android:layout_toRightOf="@+id/txtpdf"
        android:background="@drawable/rounded_button"
        android:text=" REPORT "
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="17dp"
        android:textStyle="normal" />

</RelativeLayout>